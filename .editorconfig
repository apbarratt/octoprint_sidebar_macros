# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 90

[**.py]
indent_size = 4

[**.js]
indent_size = 4

[**.yml]
indent_size = 2

[**.yaml]
indent_size = 2

[**.json]
indent_size = 2

[**.jsonc]
indent_size = 2
